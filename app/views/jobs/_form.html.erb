<%= form_for @job, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :time, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :time, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :finished, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :finished, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :order, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :order, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :distance, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :distance, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :checkin, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.check_box :checkin, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  jobs_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
